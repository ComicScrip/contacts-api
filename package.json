{
  "name": "contacts-api",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "sync-orm-with-db": "npx prisma introspect && npx prisma generate",
    "start:all": "docker-compose up",
    "start:server": "node app.js",
    "start:server:watch": "nodemon -e yaml,js,json app.js",
    "setup-db": "docker-compose up -d db",
    "create-db-migration": "db-migrate create $NAME --sql-file",
    "migrate-db": "db-migrate up",
    "rollback-last-db-migration": "db-migrate down",
    "start": "npm-run-all migrate-db sync-orm-with-db start:server",
    "start:watch": "npm-run-all migrate-db sync-orm-with-db start:server:watch",
    "test": "DB_URL=mysql://root:root@localhost:3308/contact_api_database_test jest --testRunner='jest-circus/runner' --maxWorkers=1",
    "test:setup-db": "docker-compose up -d test_db",
    "test:migrate-db": "db-migrate up -e test",
    "wait-for-db": "node ./scripts/wait10s.js",
    "test:setup-and-run": "npm-run-all test:setup-db wait-for-db test:migrate-db test",
    "lint": "eslint --fix .",
    "reinstall-packages": "rm -rf node_modules && rm package-lock.json > /dev/null 2>&1 ; npm i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "express-async-handler": "^1.1.4",
    "faker": "^5.1.0",
    "joi": "^17.3.0",
    "lodash": "^4.17.20",
    "@prisma/client": "^2.11.0",
    "npm-run-all": "^4.1.5",
    "swagger-jsdoc": "^4.3.2",
    "swagger-ui-express": "^4.1.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.11.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "nodemon": "^2.0.6",
    "supertest": "^4.0.2"
  }
}
